@model IEnumerable<PrimarieWeb.Models.Chat>

@{
    ViewData["Title"] = "Index";
}

<h1>Chat</h1>

<p class="highlight">
    <a asp-action="Create" class="highlight">Create New</a>
</p>

<table class="table table-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nrParticipanti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cetatean)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nrParticipanti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cetatean.CetateanId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ChatId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ChatId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ChatId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

